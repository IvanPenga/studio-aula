---
import "../../styles/main.css";
import "../../styles/fonts.css";
import "../../styles/buttons.css";
import Color from "./Color.astro";
import Layout from "../../layouts/Layout.astro";
import Text from "./Text.astro";
import Building3D from "../../components/Building/Building3d.astro";
---

<Layout>
  <div class="flex">
    <Color value="color-primary-100" />
    <Color value="color-primary-300" />
    <Color value="color-primary-500" />
    <Color value="color-primary-700" />
  </div>
  <div class="flex">
    <Color value="color-secondary-300" />
    <Color value="color-secondary-500" />
    <Color value="color-secondary-700" />
  </div>
  <div class="flex flex-col">
    <Text value={'color-text-100'}>100 Hello world</Text>
    <Text value={'color-text-300'}>300 Hello world</Text>
    <Text value={'color-text-500'}>500 Hello world</Text>
    <Text value={'color-text-700'}>700 Hello world</Text>
    <Text value={'color-text-900'}>900 Hello world</Text>
  </div>
  <div class="flex flex-col">
    <Text value={'color-text-100'}><h1>100 Hello world</h1></Text>
    <Text value={'color-text-300'}><h1>300 Hello world</h1></Text>
    <Text value={'color-text-500'}><h1>500 Hello world</h1></Text>
    <Text value={'color-text-700'}><h1>700 Hello world</h1></Text>
    <Text value={'color-text-900'}><h1>900 Hello world</h1></Text>

    <Text value={'color-primary-100'}><h1>100 Hello world</h1></Text>
    <Text value={'color-primary-300'}><h1>300 Hello world</h1></Text>
    <Text value={'color-primary-500'}><h1>500 Hello world</h1></Text>
    <Text value={'color-primary-700'}><h1>700 Hello world</h1></Text>

    <div class={'text-3xl'}>
      <Text class={'font-light'}><p>300 Light Hello world</p></Text>
      <Text class={'font-normal'}><p>400 Normal Hello world</p></Text>
      <Text class={'font-bold'}><p>700 Bold Hello world</p></Text>
    </div>
  </div>

</Layout>

<style>
  .buildings {
    display: flex;
    perspective: 700px;
    transform: rotateX(-20deg) rotateY(-25deg);
    transform-style: preserve-3d;
  }
</style>
